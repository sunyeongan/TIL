package MST;

import java.util.List;

public class DijkstraSP {
	
	public int N;
	List<Edge> [] graph;
	public int[] previous; //최단 경로상 이전 정점을 기록하기 위해서 
	
	public DijkstraSP (List<Edge> [] adjList) {
		N = adjList.length;
		previous = new int[N];
		graph = adjList;
	}
	
	public int[] shortestPath (int s) {
		
		boolean[] visited = new boolean[N];
		int[] D = new int[N];
		
		for(int i = 0; i < N; i++) {
			visited[i] = false;
			previous[i] = -1;
			D[i] = Integer.MAX_VALUE;
		}
	}
	
	

}
